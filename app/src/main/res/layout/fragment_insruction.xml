<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.udacity.shoestore.fragment.InsructionFragment">

<!--    Intruction about how user interacte with App-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/Image_heels"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/heels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/textone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Image_heels"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/space_50"
            android:text="@string/hurry_up_add_your_product"
            android:textStyle="bold"
            android:textSize="@dimen/size_30"
            android:textColor="@color/black"
            android:layout_margin="@dimen/space_20"
            />
        <TextView
            android:id="@+id/texttwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textone"
            android:layout_marginTop="10dp"
            android:text="@string/add_your_product"
            android:textSize="@dimen/size_20"
            android:textColor="@color/black"
            android:padding="@dimen/space_20"
            />
        <TextView
            android:id="@+id/textthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/texttwo"
            android:text="@string/click_save_button"
            android:textSize="@dimen/size_20"
            android:textColor="@color/black"
            android:padding="@dimen/space_15"
            />
        <!--   Next  -->
        <Button
            android:id="@+id/NextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textthree"
            android:text="Next"
            android:textColor="@color/colorPrimary"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="@dimen/space_50"
            android:layout_marginTop="@dimen/space_40"
            android:textSize="@dimen/size_20"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
